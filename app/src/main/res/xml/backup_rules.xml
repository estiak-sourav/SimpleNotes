<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include Room database files -->
        <include domain="database" path="notes_database"/>
        <include domain="sharedpref" path=""/>
    </cloud-backup>

    <device-transfer>
        <!-- Same rules for device-to-device transfer -->
        <include domain="database" path="notes_database"/>
        <include domain="sharedpref" path=""/>
    </device-transfer>
</data-extraction-rules>
